{
  "family": "chicago-hub-api-staging",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::947442015939:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::947442015939:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "chicago-hub-api-staging",
      "image": "947442015939.dkr.ecr.us-east-2.amazonaws.com/chicago-hub-api:staging",
      "portMappings": [
        {
          "containerPort": 3001,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "staging"
        },
        {
          "name": "PORT",
          "value": "3001"
        },
        {
          "name": "FRONTEND_URL",
          "value": "https://staging-admin.localmedia.store"
        }
      ],
      "secrets": [
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:ssm:us-east-2:947442015939:parameter/chicago-hub-staging/jwt-secret"
        },
        {
          "name": "MONGODB_URI",
          "valueFrom": "arn:aws:ssm:us-east-2:947442015939:parameter/chicago-hub-staging/mongodb-uri"
        },
        {
          "name": "MONGODB_DB_NAME",
          "valueFrom": "arn:aws:ssm:us-east-2:947442015939:parameter/chicago-hub-staging/mongodb-db-name"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "valueFrom": "arn:aws:ssm:us-east-2:947442015939:parameter/chicago-hub-staging/aws-access-key-id"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "valueFrom": "arn:aws:ssm:us-east-2:947442015939:parameter/chicago-hub-staging/aws-secret-access-key"
        },
        {
          "name": "AWS_S3_BUCKET",
          "valueFrom": "arn:aws:ssm:us-east-2:947442015939:parameter/chicago-hub-staging/s3-bucket"
        },
        {
          "name": "MAILGUN_API_KEY",
          "valueFrom": "arn:aws:ssm:us-east-2:947442015939:parameter/chicago-hub-staging/mailgun-api-key"
        },
        {
          "name": "MAILGUN_DOMAIN",
          "valueFrom": "arn:aws:ssm:us-east-2:947442015939:parameter/chicago-hub-staging/mailgun-domain"
        },
        {
          "name": "STOREFRONT_DOMAIN",
          "valueFrom": "arn:aws:ssm:us-east-2:947442015939:parameter/chicago-hub-staging/storefront-domain"
        },
        {
          "name": "STOREFRONT_HOSTED_ZONE_ID",
          "valueFrom": "arn:aws:ssm:us-east-2:947442015939:parameter/chicago-hub-staging/storefront-hosted-zone-id"
        },
        {
          "name": "STOREFRONT_CLOUDFRONT_DISTRIBUTION_ID",
          "valueFrom": "arn:aws:ssm:us-east-2:947442015939:parameter/chicago-hub-staging/storefront-cloudfront-distribution-id"
        },
        {
          "name": "STOREFRONT_CLOUDFRONT_DOMAIN",
          "valueFrom": "arn:aws:ssm:us-east-2:947442015939:parameter/chicago-hub-staging/storefront-cloudfront-domain"
        },
        {
          "name": "STOREFRONT_SSL_CERTIFICATE_ARN",
          "valueFrom": "arn:aws:ssm:us-east-2:947442015939:parameter/chicago-hub-staging/storefront-ssl-certificate-arn"
        },
        {
          "name": "STOREFRONT_DNS_TTL",
          "valueFrom": "arn:aws:ssm:us-east-2:947442015939:parameter/chicago-hub-staging/storefront-dns-ttl"
        },
        {
          "name": "STOREFRONT_AWS_REGION",
          "valueFrom": "arn:aws:ssm:us-east-2:947442015939:parameter/chicago-hub-staging/storefront-aws-region"
        },
        {
          "name": "STOREFRONT_AI_CHAT_URL",
          "valueFrom": "arn:aws:ssm:us-east-2:947442015939:parameter/chicago-hub-staging/storefront-ai-chat-url"
        },
        {
          "name": "PERPLEXITY_API_KEY",
          "valueFrom": "arn:aws:ssm:us-east-2:947442015939:parameter/chicago-hub-staging/perplexity-api-key"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/chicago-hub-api-staging",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "node -e \"const http=require('http');const req=http.request({hostname:'localhost',port:3001,path:'/health',method:'GET'},res=>{process.exit(res.statusCode===200?0:1)});req.on('error',()=>process.exit(1));req.end();\""
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}

